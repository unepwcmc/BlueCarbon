<div class="page-header">
  <%= link_to admins_path, :class => 'btn' do %>
    <i class="icon-list-alt"></i>
    Back
  <% end if can? :manage, Admin %>
  <%= link_to edit_admin_path(@admin), :class => 'btn btn-primary' do %>
    <i class="icon-pencil icon-white"></i>
    Edit
  <% end %>

  <% if can? :manage, Admin %>
    <%= link_to admin_path(@admin), :method => :delete, :confirm => "Are you sure?", :class => 'btn btn-danger' do %>
      <i class="icon-remove icon-white"></i>
      Delete
    <% end %>
  <% end %>
  <h1>User</h1>
</div>

<dl>
  <dt>Email:</dt>
  <dd><%= @admin.email %></dd>

  <dt>Roles:</dt>
  <dd><%= @admin.roles.any? && @admin.roles.map(&:name).join(', ') || '-' %></dd>
</dl>
