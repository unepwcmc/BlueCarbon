<%= simple_form_for(@validation, :defaults => { :input_html => { :class => 'span8' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :coordinates %>
    <%= f.input :action, collection: ['add', 'delete', 'validate'], include_blank: false %>
    <%= f.input :recorded_at, input_html: { class: 'span1' } %>
    <%= f.input :area_id, collection: Area.all, include_blank: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
