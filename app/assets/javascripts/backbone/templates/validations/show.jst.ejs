<div id="map"></div>

<div id="sidebar" class="shadow">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <h5>Habitat area</h5>

        <dl>
          <dt>Action:</dt>
          <dd><%= action %></dd>
        </dl>

        <dl>
          <dt>Habitat:</dt>
          <dd><%= habitat %></dd>
        </dl>

        <% if(action != 'delete') { %>
          <dl>
            <dt>Area:</dt>
            <dd><%= area_id %></dd>
          </dl>

          <dl>
            <dt>Recorded at:</dt>
            <dd><%= recorded_at %></dd>
          </dl>

          <dl>
            <dt>Knowledge:</dt>
            <dd><%= knowledge %></dd>
          </dl>

          <dl>
            <dt>Density:</dt>
            <dd><%= density %></dd>
          </dl>

          <dl>
            <dt>Age:</dt>
            <dd><%= age %></dd>
          </dl>

          <dl>
            <dt>Notes:</dt>
            <dd><%= notes %></dd>
          </dl>
        <% } %>
      </div>
    </div>
  </div>
</div>

<footer class="navbar navbar-fixed-bottom">
  <div class="navbar-inner">
    <div class="container-fluid">
      <p>&copy; UNEP-WCMC 2012</p>
    </div>
  </div>
</footer>
